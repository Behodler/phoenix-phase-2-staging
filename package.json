{
  "name": "phstaging2-local-deploy",
  "version": "1.0.0",
  "description": "Local deployment orchestration for Phoenix Phase 2 contracts",
  "scripts": {
    "start:anvil": "anvil --host 0.0.0.0 --port 8545 --chain-id 31337 --block-time 2",
    "clean:local": "rm -rf broadcast/*/31337 server/deployments/progress.31337.json server/deployments/local.json",
    "deploy:local": "npm run clean:local && forge script script/DeployMocks.s.sol:DeployMocks --rpc-url http://localhost:8545 --broadcast --slow",
    "deploy:sepolia": "forge script script/DeployMocksSepolia.s.sol:DeployMocksSepolia --rpc-url $RPC_SEPOLIA --broadcast --slow --private-key $DEPLOYER_SEPOLIA_pk && npm run extract:sepolia && npm run generate:ts-sepolia",
    "deploy:mainnet-preview": "PREVIEW_MODE=true forge script script/DeployMainnet.s.sol:DeployMainnet --rpc-url $RPC_MAINNET --slow -vvv",
    "deploy:mainnet-fresh": "node scripts/check-dry-run.js && rm -f server/deployments/progress.1.json && PREVIEW_MODE=false forge script script/DeployMainnet.s.sol:DeployMainnet --rpc-url $RPC_MAINNET --broadcast --skip-simulation --slow --ledger --hd-paths \"m/44'/60'/46'/0/0\" -vvv",
    "deploy:mainnet-recover": "forge script script/DeployMainnet.s.sol:DeployMainnet --rpc-url $RPC_MAINNET --broadcast --slow --ledger --hd-paths \"m/44'/60'/46'/0/0\" -vvv",
    "extract:addresses": "node server/extract-addresses.js 31337",
    "extract:sepolia": "node server/extract-addresses.js 11155111",
    "extract:mainnet": "node server/extract-addresses.js 1",
    "generate:ts-addresses": "node server/generate-ts-addresses.js 31337",
    "generate:ts-sepolia": "node server/generate-ts-addresses.js 11155111",
    "generate:ts-mainnet": "node server/generate-ts-addresses.js 1",
    "serve": "node server/index.js",
    "dev": "npm run clean:local && npm run start:anvil & sleep 3 && npm run deploy:local && ./simulate-yield.sh && npm run extract:addresses && npm run serve",
    "test:full-flow": "forge script script/interactions/FullFlowTest.s.sol:FullFlowTest --rpc-url http://localhost:8545 --broadcast",
    "generate:hooks": "wagmi generate",
    "publish:hooks": "cd hooks && npm publish",
    "version:hooks": "cd hooks && npm version",
    "update:hooks": "npm run generate:hooks && npm run version:hooks patch && npm run publish:hooks",
    "interact:mint": "forge script script/interactions/MintPhUSD.s.sol:MintPhUSD --rpc-url http://localhost:8545 --broadcast",
    "interact:stake": "forge script script/interactions/StakeOnPhlimbo.s.sol:StakeOnPhlimbo --rpc-url http://localhost:8545 --broadcast",
    "interact:claim-rewards": "forge script script/interactions/ClaimPhlimboRewards.s.sol:ClaimPhlimboRewards --rpc-url http://localhost:8545 --broadcast",
    "interact:withdraw": "forge script script/interactions/WithdrawFromPhlimbo.s.sol:WithdrawFromPhlimbo --rpc-url http://localhost:8545 --broadcast",
    "interact:claim-accumulator": "forge script script/interactions/ClaimAccumulatorYield.s.sol:ClaimAccumulatorYield --rpc-url http://localhost:8545 --broadcast",
    "view:pending-rewards": "forge script script/interactions/ViewPendingRewards.s.sol:ViewPendingRewards --rpc-url http://localhost:8545",
    "view:pool": "forge script script/interactions/ViewPoolInfo.s.sol:ViewPoolInfo --rpc-url http://localhost:8545",
    "view:yield-strategies": "forge script script/interactions/ViewYieldStrategies.s.sol:ViewYieldStrategies --rpc-url http://localhost:8545",
    "view:mint-quote": "forge script script/interactions/ViewMintQuote.s.sol:ViewMintQuote --rpc-url http://localhost:8545",
    "admin:set-apy": "forge script script/interactions/SetDesiredAPY.s.sol:SetDesiredAPY --rpc-url http://localhost:8545 --broadcast",
    "admin:register-stable": "forge script script/interactions/RegisterStablecoin.s.sol:RegisterStablecoin --rpc-url http://localhost:8545 --broadcast",
    "admin:update-rate": "forge script script/interactions/UpdateExchangeRate.s.sol:UpdateExchangeRate --rpc-url http://localhost:8545 --broadcast",
    "admin:add-yield-strategy": "forge script script/interactions/AddYieldStrategy.s.sol:AddYieldStrategy --rpc-url http://localhost:8545 --broadcast",
    "admin:set-yield-rate": "forge script script/interactions/SetDiscountRate.s.sol:SetDiscountRate --rpc-url http://localhost:8545 --broadcast",
    "admin:pause": "forge script script/interactions/PauseContract.s.sol:PauseContract --rpc-url http://localhost:8545 --broadcast",
    "test:fund-user": "forge script script/interactions/FundTestUser.s.sol:FundTestUser --rpc-url http://localhost:8545 --broadcast",
    "test:simulate-yield": "forge script script/interactions/SimulateYield.s.sol:SimulateYield --rpc-url http://localhost:8545 --broadcast",
    "test:fast-forward": "forge script script/interactions/FastForward.s.sol:FastForward --rpc-url http://localhost:8545",
    "mainnet:no-mint-deposit-dry": "forge script script/interactions/NoMintDeposit.s.sol:NoMintDeposit --rpc-url $RPC_MAINNET --sender 0xCad1a7864a108DBFF67F4b8af71fAB0C7A86D0B6 -vvv",
    "mainnet:no-mint-deposit": "forge script script/interactions/NoMintDeposit.s.sol:NoMintDeposit --rpc-url $RPC_MAINNET --broadcast --ledger --hd-paths \"m/44'/60'/46'/0/0\" -vvv",
    "mainnet:no-mint-deposit-alt": "forge script script/interactions/NoMintDeposit.s.sol:NoMintDeposit --rpc-url $RPC_MAINNET --broadcast --ledger --hd-paths \"m/44'/60'/0'/0/46\" -vvv"
  },
  "keywords": [
    "phoenix",
    "deployment",
    "foundry",
    "local",
    "development"
  ],
  "author": "Behodler",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@wagmi/cli": "^2.8.0"
  }
}
