{
  "name": "phstaging2-local-deploy",
  "version": "1.0.0",
  "description": "Local deployment orchestration for Phoenix Phase 2 contracts",
  "scripts": {
    "start:anvil": "anvil --host 0.0.0.0 --port 8545 --chain-id 31337 --block-time 7",
    "deploy:local": "forge script script/DeployMocks.s.sol:DeployMocks --rpc-url http://localhost:8545 --broadcast --slow",
    "extract:addresses": "node server/extract-addresses.js",
    "serve": "node server/index.js",
    "dev": "npm run start:anvil & sleep 3 && npm run deploy:local && npm run extract:addresses && npm run serve"
  },
  "keywords": ["phoenix", "deployment", "foundry", "local", "development"],
  "author": "Behodler",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {}
}
